<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect all requests to /public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L,QSA]
</IfModule>

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "(composer\.json|composer\.lock|package\.json|package-lock\.json|\.env|\.env\.example|artisan)$">
    Order allow,deny
    Deny from all
</FilesMatch>

