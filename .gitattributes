# ========================================
# Git Attributes для GreenPlant
# ========================================

# Auto detect text files and perform LF normalization
* text=auto

# ========================================
# Source Code
# ========================================
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf

# ========================================
# Blade Templates
# ========================================
*.blade.php text eol=lf diff=html

# ========================================
# Configuration Files
# ========================================
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# ========================================
# Scripts
# ========================================
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# ========================================
# Images
# ========================================
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text
*.webp binary

# ========================================
# Fonts
# ========================================
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# ========================================
# Archives
# ========================================
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# ========================================
# Documents
# ========================================
*.pdf binary
*.doc binary
*.docx binary

# ========================================
# Export-ignore (не включать в архив при экспорте)
# ========================================
/.github export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/tests export-ignore
/.phpunit.cache export-ignore
/phpunit.xml export-ignore
/.editorconfig export-ignore
/ANALYSIS_SUMMARY.md export-ignore
/COMPLETED_TODAY.md export-ignore
/CRITICAL_TASKS_COMPLETED.md export-ignore
/FINAL_REPORT.md export-ignore
/QUICK_START.md export-ignore
/READY.md export-ignore
/START_HERE.md export-ignore
/TEST_*.md export-ignore
/VERSION_*.md export-ignore

